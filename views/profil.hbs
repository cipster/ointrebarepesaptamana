<header id="forgot-password" class="bg-info text-center">
    <a href="/main" class="btn btn-success back-to-site"><i class="fa fa-long-arrow-left"></i>&nbsp;&Icirc;napoi</a>

    <div class="container">
        <div class="row profile">
            <div class="col-sm-4">
                <div class="row">
                    <div class="col-xs-5 col-sm-12 text-left">
                        <h3>Informa&#539;ii Generale</h3>
                        <ul id="profile-list" class="list-group">
                            <li class="list-group-item"><i class="fa fa-fw fa-user"></i> Nume <a class="profile-editable" href="#" id="nume" data-type="text" data-pk="{{_id}}" data-url="/profil"
                                                                                                 data-title="Modific&abreve; nume">{{nume}}</a></li>
                            <li class="list-group-item"><i class="fa fa-fw fa-venus-mars"></i> Sex <a class="profile-editable" href="#" id="demografice.sex" data-type="select" data-pk="{{_id}}"
                                                                                                      data-url="/profil" data-title="Modific&abreve; sex"
                                                                                                      data-source="[{value: 'Feminin', text: 'Feminin'}, {value: 'Masculin', text: 'Masculin'}]">{{demografice.sex}}</a>
                            </li>
                            <li class="list-group-item"><i class="fa fa-fw fa-clock-o"></i> V&acirc;rst&abreve; <a class="profile-editable" href="#" id="demografice.varsta" data-type="number"
                                                                                                                   data-pk="{{_id}}" data-url="/profil"
                                                                                                                   data-title="Modific&abreve; v&acirc;rst&abreve;">{{demografice.varsta}}</a></li>
                            <li class="list-group-item"><i class="fa fa-fw fa-university"></i> Studii <a class="profile-editable" href="#" id="demografice.studii" data-type="select" data-pk="{{_id}}"
                                                                                                         data-url="/profil" data-title="Modific&abreve; studii"
                                                                                                         data-source="/studii">{{demografice.studii}}</a></li>
                        </ul>

                        <h3>Informa&#539;ii Contact</h3>
                        <ul id="profile-list" class="list-group">
                            <li class="list-group-item"><i class="fa fa-fw fa-phone"></i> Telefon <a class="profile-editable" href="#" id="contact.telefon" data-type="text" data-pk="{{_id}}"
                                                                                                     data-url="/profil" data-title="Modific&abreve; telefon">{{contact.telefon}}</a></li>
                            <li class="list-group-item"><i class="fa fa-fw fa-map-marker"></i> Adres&abreve; <a class="profile-editable" href="#" id="contact.adresa" data-type="text" data-pk="{{_id}}"
                                                                                                                data-url="/profil" data-title="Modific&abreve; adres&abreve;">{{contact.adresa}}</a>
                            </li>
                            <li class="list-group-item"><i class="fa fa-fw fa-building"></i> Ora&#x219; <a class="profile-editable" href="#" id="contact.oras" data-type="select" data-pk="{{_id}}"
                                                                                                           data-url="/profil" data-title="Modific&abreve; oras"
                                                                                                           data-source="/cities">{{contact.oras}}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div id="aboutme-container">
                    <div class="row">
                        <h2>Despre mine</h2>

                        <div id="aboutme" class="text-left" data-type="wysihtml5" data-pk="{{_id}}" data-url="/profil" style="width: 900px;">{{aboutme}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script src="js/profil.js"></script>
